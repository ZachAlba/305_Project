{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "patternProperties": {
      "^artists/[a-zA-Z0-9]+$": {
        "type": "object",
        "properties": {
          "albums": {
            "type": "object",
            "patternProperties": {
              "^.*$": {
                "type": "object",
                "properties": {
                  "name": {"type": "string"},
                  "songs": {
                    "type": "object",
                    "patternProperties": {
                      "^.*$": {"type": "string"}
                    },
                    "additionalProperties": false
                  }
                },
                "required": ["name", "songs"],
                "additionalProperties": false
              }
            },
            "additionalProperties": false
          },
          "genre": {"type": "string"},
          "name": {"type": "string"},
          "picture": {"type": "string", "format": "uri"}
        },
        "required": ["albums", "genre", "name", "picture"],
        "additionalProperties": false
      },
      "^users/[a-zA-Z0-9]+$": {
        "type": "object",
        "properties": {
          "bio": {"type": "string"},
          "name": {"type": "string"},
          "picture": {"type": "string", "format": "uri"}
        },
        "required": ["bio", "name", "picture"],
        "additionalProperties": false
      }
    }
  }
  